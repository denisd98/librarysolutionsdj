<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/user_detail_username"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="2dp"
        android:background="#DDF0FF"
        android:fontFamily="monospace"
        android:paddingLeft="20px"
        android:text="Nom d'usuari"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/usuari_lbl"
        app:layout_constraintTop_toBottomOf="@+id/user_detail_id" />

    <TextView
        android:id="@+id/userid_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="ID de l'usuari:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <TextView
        android:id="@+id/usuari_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="monospace"
        android:paddingBottom="20px"
        android:text="Nom d'usuari: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userid_lbl" />

    <TextView
        android:id="@+id/user_detail_id"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:background="#DDF0FF"
        android:fontFamily="monospace"
        android:paddingLeft="20px"
        android:text="Id"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/userid_lbl"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
